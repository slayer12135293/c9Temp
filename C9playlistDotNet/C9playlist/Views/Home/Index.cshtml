@model C9playlist.Models.IndexPageViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>Generate your playlist</h1>
<section class="row bg-success padding-medium">
 @using (Html.BeginForm())
 {
     <section class="col-md-12 ">
         <section class="col-md-4 form-group">
             <label>
                 No. of songs
                 @Html.EditorFor(model => model.SearchParams.NumberOfSongs, new { htmlAttributes = new { @class = "form-control" } })
             </label>
         </section>
         <section class="col-md-4 form-group">
             <label>

             </label>
         </section>
         <section class="col-md-4 form-group">
             <label>

             </label>
         </section>
     </section>
     <section class="col-md-12 text-right"><input type="submit" value="Generate List" class="btn btn-default" /></section>
 }
</section>
<section class="row">
    @if (Model.DisplayedList.Any())
    {

        <section>
            <section class='table-responsive'>
                <table class='table'>
                    <thead>
                        <tr>
                            <th>
                                title1
                            </th>
                            <th>Product</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DisplayedList)
                        {
                            <tr>
                                <td>
                                   @item.Name
                                </td>
                                <td>
                                    @item.Property1
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </section>

        </section>




    }


</section>