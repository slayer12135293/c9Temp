@model C9playlist.Models.ArtistResultPageViewModel

@{
    ViewBag.Title = "title";
   
}

<h2>Artist Result</h2>
<section class="row">
    <section class="col-md-12 bg-success">
        <label>Limit: @Model.Limit</label>
        <label>Total: @Model.Total</label>
    </section>
</section>

<section class="row">
    <section class="col-md-12">

        @{
            if (Model.Artists.Any())
            {
                <section class='table-responsive'>
                    <table class='table'>
                        <thead>
                            <tr>
                                <th>

                                </th>
                                <th>Name</th>
                                <th>Id</th>
                                <th>Total Followers</th>
                                <th>

                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                foreach (var item in Model.Artists)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" class="thumbImg" />
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.TotalFollower
                        </td>
                        <td>
                            <a href="@item.Url" target="_blank" class="btn btn-info">Go to Album </a>
                        </td>


                    </tr>
                }
                            }

                        </tbody>
                    </table>
                </section>
            }
        }




    </section>
</section>
